<Window x:Class="ChatPeer.Messaggi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatPeer"
        mc:Ignorable="d"
        Title="Messaggi" Height="450" Width="625">
    <Grid>
        <TextBox x:Name="txt_messaggio" HorizontalAlignment="Left" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" Height="34"/>
        <Button x:Name="button" Content="Invia il messaggio" HorizontalAlignment="Left" Margin="307,44,0,0" VerticalAlignment="Top" Height="34" Width="146" Click="button_Click"/>
        <Grid Margin="0,117,0,10"  >
            <ScrollViewer>
                <TextBlock x:Name="txt_all" Margin="0,0,0,0" TextWrapping="Wrap" Width="494"
                   ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            </ScrollViewer>
        </Grid>
        <Button x:Name="btn_indietro" Content="Esci" HorizontalAlignment="Left" Margin="472,44,0,0" VerticalAlignment="Top" Height="34" Width="114" Click="btn_indietro_Click"/>





    </Grid>
</Window>
